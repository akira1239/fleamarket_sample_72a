      .mypg-side
        %nav.mypg-side-bar
          %ul.mypg-side-bar__list
            %li 
              = link_to "#" do
                .mypg-side-bar__list-item マイページ
              %i.icon-arrow-right
            %li 
              = link_to "#" do
                いいね！一覧
              %i.icon-arrow-right
            %li 
              = link_to "#" do
                出品する
              %i.icon-arrow-right
            %li 
              = link_to "#" do
